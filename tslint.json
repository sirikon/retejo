{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "indent": [
            true,
            "tabs",
            4
        ],
        "quotemark": [
            true,
            "single",
            4
        ],
        "semicolon": [
            true
        ],
        "object-literal-sort-keys": [
            false
        ]
    },
    "rulesDirectory": [],
    "linterOptions": {
        "exclude": [
            "lib/**/*"
        ]
    }
}
